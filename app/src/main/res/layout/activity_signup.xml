<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SL_TEACHER.SIGNUP"
    android:background="@drawable/background_sign">
    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="118dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:background="@color/Yellow"
        android:fontFamily="@font/aladin"
        android:gravity="center"
        android:text="SIGN UP"
        android:textSize="50dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/text_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="NAME :"
                    android:textColor="@color/lightgray"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="FULL NAME"
                    android:inputType="textPersonName"
                    android:maxLength="30"
                    android:textColor="@color/white"
                    android:textColorHint="#0288D1" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="DATE OF BIRTH"
                    android:textColor="@color/lightgray"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/dob"
                    android:layout_width="101dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:drawableEnd="@drawable/ic_arrow"
                    android:text="01/01/2019"
                    android:textColorHint="#0288D1"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="UNIVERSITY/COLLEGE/SCHOOL"
                    android:textColor="@color/lightgray"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edu_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="UNI/COL/SCH NAME"
                    android:inputType="textPersonName"
                    android:maxLength="50"
                    android:textColor="@color/white"
                    android:textColorHint="#0288D1" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="SELECT PROFILE PICTURE :"
                    android:textColor="@color/lightgray"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/profile_pic"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:layout_marginTop="10dp"

                    android:background="@drawable/custombutton_stroke"
                    android:text="SELECT PICTURE"
                    android:textColor="@color/Yellow" />

                <Button
                    android:id="@+id/signup"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/button_sign"
                    android:text="SIGNUP" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"

                    />

            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</LinearLayout>