<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/listview_layout_relative_grid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="7dp"
        android:paddingStart="7dp"
        android:paddingLeft="7dp"
        android:paddingTop="7dp"
        android:paddingEnd="7dp"
        android:paddingRight="7dp"
        android:paddingBottom="7dp">

        <LinearLayout
            android:id="@+id/picture_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView23"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="7dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/list_selection_grid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/qrstudent_grid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                tools:srcCompat="@tools:sample/avatars[0]" />
        </LinearLayout>

        <TextView
            android:id="@+id/classname_layout_grid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/picture_layout"
            android:layout_alignParentStart="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="7dp"
            android:text="CLASSNAME"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/classname_layout_grid"
            android:layout_alignParentStart="true"
            android:layout_marginStart="17dp"
            android:layout_marginTop="6dp"
            android:text="RN:"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/rollno_layout_grid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/classname_layout_grid"
            android:layout_marginStart="3dp"
            android:layout_marginTop="6dp"
            android:layout_toEndOf="@+id/textView21"
            android:text="FA16-BCS-048" />

        <TextView
            android:id="@+id/textView23"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView21"
            android:layout_alignParentStart="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="4dp"
            android:text="DATE:" />

        <TextView
            android:id="@+id/dategenerted_layout_grid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rollno_layout_grid"
            android:layout_alignParentStart="true"
            android:layout_marginStart="40dp"
            android:layout_marginTop="2dp"
            android:text="16/08/20" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="133dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dategenerted_layout_grid"
            android:layout_alignParentStart="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/simple_line" />

    </RelativeLayout>

</LinearLayout>