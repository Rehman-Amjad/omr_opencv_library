<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/listview_layout_relative"
        android:layout_width="match_parent"
        android:layout_height="196dp"
        android:background="?attr/selectableItemBackground"
        android:descendantFocusability="blocksDescendants"
        >

        <LinearLayout
            android:layout_width="179dp"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <CheckBox
                android:id="@+id/list_selection"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/qrstudent"
                android:layout_width="match_parent"
                android:layout_height="183dp"
                android:layout_marginTop="0dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/classname_layout"
            android:layout_width="125dp"
            android:layout_height="29dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="220dp"
            android:layout_marginTop="17dp"
            android:text="CLASS NAME"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="71dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="187dp"
            android:layout_marginTop="59dp"
            android:text="ROLL NO"
            android:textColor="@color/deeppurple"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/rollno_layout"
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="253dp"
            android:layout_marginTop="88dp"
            android:text="TextView" />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="187dp"
            android:layout_marginTop="120dp"
            android:text="DATE GENERATED"
            android:textColor="@color/green"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dategenerted_layout"
            android:layout_width="127dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="252dp"
            android:layout_marginTop="150dp"
            android:text="TextView" />


    </RelativeLayout>

    <TextView
        android:id="@+id/textView102"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:background="@drawable/simple_line" />

</LinearLayout>