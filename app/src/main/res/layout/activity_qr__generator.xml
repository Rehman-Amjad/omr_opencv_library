<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".QR_GENERATOR.QR_GENERATOR">
    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:background="@color/Yellow"
        android:fontFamily="@font/aladin"
        android:gravity="center"
        android:text="QR CODE GENERATOR"
        android:textSize="50dp"
        android:textStyle="bold" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/rollno"
            android:layout_width="332dp"
            android:layout_height="61dp"
            android:layout_weight="1"
            android:ems="10"
            android:hint="ROLLNO EG: FA16-BCS"
            android:inputType="textPersonName"
            android:maxLength="15"
            android:text="" />

        <EditText
            android:id="@+id/Rstart"
            android:layout_width="225dp"
            android:layout_height="59dp"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="number"
            android:hint="Start"
            android:maxLength="2"
            android:text="" />

        <EditText
            android:id="@+id/Rend"
            android:layout_width="wrap_content"
            android:layout_height="59dp"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="number"
            android:text=""
            android:hint="End"
            android:maxLength="2"
            />
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="1563dp">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="122dp"
            android:layout_height="51dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="9dp"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:text="CLASS NAME :"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/classname"
            android:layout_width="269dp"
            android:layout_height="55dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="11dp"
            android:layout_marginTop="6dp"
            android:layout_toEndOf="@+id/textView7"
            android:ems="10"
            android:hint="Enter Classname"
            android:inputType="textPersonName"
            android:maxLength="15"
            android:text="" />

        <ImageView
            android:id="@+id/qrview"
            android:layout_width="match_parent"
            android:layout_height="275dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="9dp"
            android:layout_marginTop="89dp"
            tools:srcCompat="@tools:sample/backgrounds/scenic[12]" />

        <Button
            android:id="@+id/generate"
            android:layout_width="408dp"
            android:layout_height="73dp"
            android:layout_alignStart="@+id/textView7"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="-6dp"
            android:layout_marginTop="410dp"
            android:layout_marginEnd="3dp"
            android:background="@drawable/deep_focus"
            android:text="GENERATE" />
    </RelativeLayout>

</LinearLayout>